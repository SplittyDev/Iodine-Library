
func main () {
    opt = input ("Yes or no (y/n)? ");
    result = match opt
        when "y" | "Y" => "Its a yes" # y or Y
        when "n" | "N" => "Its a no"  # n or N
        when _ => "I don't know";     # Any value that doesn't match the above patterns (_ means wildcard)
    print (result);
}
