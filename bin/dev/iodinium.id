use * from core
use WebServer from webserver
use json

func main (args) {

   # Read config
   f = open ("iodinium.json", "r")
   config = json.parse (f.readAllText ())
   f.close ()

   # Start the webserver
   server = WebServer ()
   server.setRoot (config["root"])
   server.setIndices (config["indices"])
   server.setPlatform (config["platform"])
   server.setDefaultMime (config["default_mime"])
   server.setMimes (config["mimes"])
   server.listen (config["host"], config["port"])
}
